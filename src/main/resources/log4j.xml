	<logger name="org.springframework.beans">
		<level value="error" />
	</logger>

	<logger name="org.springframework.web">
		<level value="error" />
	</logger>

	<logger name="org.codehaus.jackson">
		<level value="warn" />
	</logger>

	<logger name="net.viralpatel">
		<level value="error" />
	</logger>

	<logger name="com.mchange">
		<level value="info" />
	</logger>
	
	<root>
		<level value="ERROR" />
		<appender-ref ref="rollingfile" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>